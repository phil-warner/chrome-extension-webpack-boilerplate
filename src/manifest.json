{
  "name": "Cause Analytics Clipper",
  "description": " Use the this extension to save things you see on the web into your Cause Analytics account.",
  "options_page": "options.html",
  "version": "0.1",
  "background": {
    "scripts": ["js/background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "img/cause-logo.png"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "css": ["css/font-awesome.min.css", "css/animate.min.css", "css/custom.css"],
    "js": ["js/jquery-3.4.1.min.js", "js/animated-modal.js", "js/popper.min.js", "js/utils.js", "js/embed.js", "js/content.js"],
    "run_at": "document_end"
  }],
  "icons": {
    "32": "img/favicon-32x32.gif",
    "128": "img/cause-logo.png"
  },
  "web_accessible_resources": [
    "html/*.html",
    "img/*.png",
    "css/*.css",
    "fonts/FontAwesome.otf",
    "fonts/fontawesome-webfont.eot",
    "fonts/fontawesome-webfont.svg",
    "fonts/fontawesome-webfont.ttf",
    "fonts/fontawesome-webfont.woff",
    "fonts/fontawesome-webfont.woff2"
  ],
  "permissions": ["tabs", "activeTab", "<all_urls>"],
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
