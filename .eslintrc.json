{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jquery": true,
    "commonjs": true
  },
  "extends": ["eslint:recommended","plugin:security/recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "kollektive": true,
    "grecaptcha": true,
    "Stripe": true,
    "ProgressBar": true,
    "ko": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "allowImportExportEverywhere": true
  },
  "rules": {
    "no-unused-vars": ["error", { "vars": "all", "args": "none", "ignoreRestSiblings": false }],
    "no-console": ["error", { "allow": ["warn", "error", "info"] }]
  },
  "plugins": [
    "babel",
    "import",
    "ejs",
    "security"
  ]
}
